package ex02_2d_array;

import java.util.Scanner;

// 성적 관리 프로그램
// 각 점수는 입력 받아 학생별 총점과 과목별 총점 구해서 출력
// 스폰지밥의 국어 점수 >>> 10
// 스폰지밥의 영어 점수 >> 10
// 스폰지밥의 수학 점수 >> 10 ...
// ...
// 			국어 	영어	수학	학생합계
//	스폰지밥	10	10	10	30
//	타요		10	10	10	30
//	브레드	10	10	10	30
//	과목합계	30	30	30	90

public class Quiz04 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		String[] names = {"스폰지밥", "타요", "브레드", "과목합계"};
		String[] subjects = {"국어", "영어", "수학", "학생합계"};
		
		int[][] scores = new int[names.length][subjects.length];

		int sum = 0;
		
		// 점수 입력부
		for(int i = 0; i < names.length-1; i++) {
			for(int j = 0; j < subjects.length-1; j++) {
				System.out.print(names[i] + "의 " + subjects[j] + 
						" 점수를 입력하세요.");
				scores[i][j] = sc.nextInt();
				// 각각의 점수: scores[i][j]
				// 과목의 합계: scores[names.length-1][j]
				// 학생의 합계: scores[i][subjects.length-1]
				// 전체의 합계: scores[names.length-1][subjects.length-1]
				
				sum += scores[i][j];
			}
			// 학생합계 값 구하는 부분
			scores[i][subjects.length-1] = sum;
			sum = 0;
		}
		
		// 과목합계 값 구하는 부분
		for(int i = 0; i < names.length-1; i++) {
			for(int j = 0; j < subjects.length-1; j++) {
				sum += scores[j][i];
			}
		
			scores[names.length-1][i] = sum;
			sum = 0;
		}
		

		for(int j = 0; j <subjects.length-1; j++) {
			scores[names.length-1][subjects.length-1] += scores[names.length-1][j];
		}
		for(int i = 0; i < names.length-1; i++) {
			scores[names.length-1][subjects.length-1] += scores[i][subjects.length-1];
		}
		
		// 첫 줄( 과목 명 및 학생합계 표현부 )
		System.out.print("\t");
		for(int i = 0; i < subjects.length; i++) {
			System.out.print(subjects[i] + "\t");
		}
		System.out.println();
		
		
		// 각 학생의 점수 표현부
		for(int i = 0; i < names.length; i++) {
			System.out.print(names[i] + "\t");
			for(int j = 0; j < subjects.length; j++) {
					System.out.print("" + scores[i][j] + "\t");
			}

			System.out.println();
		}

	}

}
