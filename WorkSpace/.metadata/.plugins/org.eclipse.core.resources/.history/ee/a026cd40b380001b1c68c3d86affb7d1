package ex02_2d_array;

import java.util.Scanner;

// 영한사전
// 영어단어와 의미를 배열에 저장해두고
// 각 단어와 의미를 묻고 답하는 프로그램
// 봄을 영어로 하면? >> spring
// 정답
// 여름을 영어로 하면 >> summerasd 
// 오답
// 가을 >> fall
// 정답
// 겨울 >> winder
// 오답
// 2문제를 맞히고 2문제를 틀렸습니다.
public class Quiz05 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String[][] dict = {
				{"봄", "spring"},
				{"여름", "summer"},
				{"가을", "fall"},
				{"겨울", "winter"}
		};
		
		int cnt = 0;	// 틀린 문제 카운트
		System.out.print("봄을 영어로 하면?");
		String as = sc.next();
		if(!as.equalsIgnoreCase(dict[0][1])) {
			cnt++;
			System.out.println("오답");
		} else {
			System.out.println("정답");
		}
		
		System.out.println("여름을 영어로 하면?");
		as=sc.next();
		if(!as.equalsIgnoreCase(dict[1][1])) {
			cnt++;
			System.out.println("오답");
		} else {
			System.out.println("정답");
		}		
		
		System.out.println("가을을 영어로 하면?");
		as=sc.next();
		if(!as.equalsIgnoreCase(dict[2][1])) {
			cnt++;
			System.out.println("오답");
		} else {
			System.out.println("정답");
		}
		
		System.out.println("겨울을 영어로 하면?");
		as=sc.next();
		if(!as.equalsIgnoreCase(dict[3][1])) {
			cnt++;
			System.out.println("오답");
		} else {
			System.out.println("정답");
		}
		
	}

}
