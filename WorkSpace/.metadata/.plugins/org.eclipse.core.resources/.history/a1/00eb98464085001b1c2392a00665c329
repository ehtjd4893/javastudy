package quiz04;

public class Soldier {
	private String name;
	private Gun gun;
	
	
	public Soldier(String name, Gun gun) {
		super();
		this.name = name;
		this.gun = gun;
	}
	
	public void info() {
		System.out.print(this.name + ", ");
		gun.info();
	}
	
	public void reload(int i) {
		gun.reload(i);
	}
	
	public void shoot() {
		gun.shoot();
	}
}
