package ex05_constructor;

/*
 * 생성자 (constructor)
 * 1. 객체를 생성하는 메소드
 * 2. 특징
 * 		1) 결과타입 없음
 * 		2) 클래스 이름과 같은 이름
 * 		3) 매개변수: 일반 메소드처럼
 * */
public class Person {
	String name;
	int age;
	char gender;
	
	Person(String name, int age, char gender){
		this.name = name;
		this.age = age;
		this.gender = gender;
	}
	
	Person(String name, char gender){
		this.name = name;
		this.gender = gender;
	}
	
	Person(String name, int age){
		this.name = name;
		this.age = age;
	}
	
	Person(){	}
}
