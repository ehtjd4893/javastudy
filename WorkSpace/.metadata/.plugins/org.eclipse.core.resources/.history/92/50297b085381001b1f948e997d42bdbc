package ex01_random;

import java.util.Scanner;

// 로또 구매하기
// 1000원에 번호 6개 1세트
// 얼마? >>> 5000
// 1세트(1줄)에는 같은 번호 없어야함

public class Quiz06 {

	public static void main(String[] args) {
		final int PER = 1000;
		
		Scanner sc = new Scanner(System.in);
		System.out.println("얼마? >>> ");
		int pay = sc.nextInt();
		int loop = pay / PER;
		
		int[][] arr = new int[loop][6];
		
		for(int i = 0; i < loop; i++) {
			for(int j = 0; j < 6; j++) {
				arr[i][j] = (int)(Math.random() * 45) + 1;
			}
			
		}
	}

}
